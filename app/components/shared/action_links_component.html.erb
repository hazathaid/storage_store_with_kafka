<%= render(Primer::Beta::Button.new(tag: :a, href: edit_path, scheme: :default, block: false)) do %>
  Edit
<% end %>

<%= form_with(url: delete_path, method: :delete, data: { confirm: "Are you sure?" }, local: true) do %>
  <%= render(Primer::Beta::Button.new(type: :submit, scheme: :danger, block: false)) do %>
    Delete
  <% end %>
<% end %>
